<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatabaseGui">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pgnInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/pgn_file_name"
        app:errorEnabled="true"
        app:errorTextColor="@color/design_default_color_error"
        app:layout_constraintDimensionRatio="W,1.5:8.5"
        app:layout_constraintStart_toStartOf="@id/leftMargin"
        app:layout_constraintTop_toTopOf="@id/top6"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pgnInputEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/pgnEnter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Submit"
        app:layout_constraintDimensionRatio="W,1:4"
        app:layout_constraintStart_toStartOf="@id/middleLeftMargin"
        app:layout_constraintTop_toTopOf="@id/top7"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add PGN file"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/material_on_background_emphasis_high_type"
        app:layout_constraintDimensionRatio="W,1:3"
        app:layout_constraintStart_toStartOf="@id/centralMargin"
        app:layout_constraintTop_toTopOf="@id/top5"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textLoad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Load-Delete-Analyse PGN file"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/material_on_background_emphasis_high_type"
        app:layout_constraintDimensionRatio="W,1:7"
        app:layout_constraintStart_toStartOf="@id/loadTextStart"
        app:layout_constraintTop_toTopOf="@id/top8"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.7" />

    <Spinner
        android:id="@+id/pgnSelect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:8"
        app:layout_constraintStart_toStartOf="@id/leftMargin"
        app:layout_constraintTop_toTopOf="@id/top9"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/pgnDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Delete"
        app:layout_constraintDimensionRatio="W,2:5"
        app:layout_constraintStart_toStartOf="@id/leftMargin"
        app:layout_constraintTop_toTopOf="@id/top10"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/pgnAnalyse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Analyse"
        app:layout_constraintDimensionRatio="W,2:5"
        app:layout_constraintEnd_toStartOf="@id/rightMargin"
        app:layout_constraintTop_toTopOf="@id/top10"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/pgnManual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Add manually"
        app:layout_constraintDimensionRatio="W,1:4"
        app:layout_constraintStart_toStartOf="@id/middleLeftMargin"
        app:layout_constraintTop_toTopOf="@id/top4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Add Scorecard Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/material_on_background_emphasis_high_type"
        app:layout_constraintDimensionRatio="W,1:4"
        app:layout_constraintStart_toStartOf="@id/middleLeftMargin"
        app:layout_constraintTop_toTopOf="@id/top1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/scorecardBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Select"
        app:layout_constraintDimensionRatio="W,1:4"
        app:layout_constraintStart_toStartOf="@id/middleLeftMargin"
        app:layout_constraintTop_toTopOf="@+id/top2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Add PGN fields Manually"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/material_on_background_emphasis_high_type"
        app:layout_constraintDimensionRatio="W,1:5"
        app:layout_constraintStart_toStartOf="@id/loadTextStart"
        app:layout_constraintTop_toTopOf="@id/top3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/puzzleButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Puzzle"
        app:layout_constraintDimensionRatio="W,2:5"
        app:layout_constraintStart_toStartOf="@id/centralMargin"
        app:layout_constraintTop_toTopOf="@id/top11"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="7dp"
        android:progressTint="@color/black"
        android:max="100"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="@id/centralMargin"
        app:layout_constraintBottom_toBottomOf="@id/top5"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centralMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleLeftMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loadTextStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>